{
    "compilerOptions": {
        "baseUrl": ".",
        "module": "commonjs",
        "target": "es5",
        "lib": [
            "es2015",
            "es2017",
            "dom"
        ],
        "noImplicitAny": false,
        "sourceMap": false,
        "declaration": true,
        "strictNullChecks": false,
        "suppressImplicitAnyIndexErrors": false,
        "experimentalDecorators": true,
        "outDir": "./lib",
        "moduleResolution": "node"
    },
    "filesGlob": [
        "./**/*.ts",
        "!./node_modules/**/*.ts"
    ],
    "files": [
        "./index.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
