{
    "name": "@splincode/client-logger",
    "version": "1.0.0-8",
    "description": "Lightweight and configurable JavaScript logger (written on TypeScript)",
    "main": "./lib/index.js",
    "typings": "./lib/index.d.ts",
    "scripts": {
        "prepublishOnly": "npm run build",
        "start": "npm run build && concurrently 'npm:lib:*'",
        "lib:demo": "cd demo && npm install && npm run start",
        "lib:rebuild": "onchange 'src/**/*.ts' -- npm run build",
        "build": "rimraf lib && rollup --config rollup.config.js",
        "lint": "tslint -c tslint.json '**/src/**/*.ts' --project .",
        "test": "nyc --reporter=html --reporter=text mocha --opts ./mocha.opts src/**/*.spec.ts",
        "coverage": "nyc report --reporter=text-lcov | coveralls",
        "git:release": "git push origin && git push origin --tags",
        "update:changelog": "git add . && git commit -m \"chore(repo): updated CHANGELOG.md\"",
        "release:major": "changelog -M && npm run update:changelog && npm version major && npm publish && npm run git:release",
        "release:minor": "changelog -m && npm run update:changelog && npm version minor && npm publish && npm run git:release",
        "release:patch": "changelog -p && npm run update:changelog && npm version patch && npm publish && npm run git:release",
        "prerelease": "npm version prerelease && npm publish --tag next && npm run git:release"
    },
    "nyc": {
        "include": [
            "src/*.ts",
            "src/**/*.ts"
        ],
        "extension": [
            ".ts"
        ],
        "require": [
            "tsconfig-paths/register",
            "ts-node/register"
        ],
        "reporter": [
            "text-summary",
            "html"
        ],
        "sourceMap": true,
        "instrument": true
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/splincodewd/client-logger.git"
    },
    "keywords": [
        "console",
        "logger",
        "javascript",
        "browser",
        "typescript"
    ],
    "author": "splincodewd",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/splincodewd/client-logger/issues"
    },
    "homepage": "https://github.com/splincodewd/client-logger#readme",
    "devDependencies": {
        "benchmark": "^2.1.4",
        "chai": "^4.1.2",
        "concurrently": "^3.6.0",
        "coveralls": "^3.0.1",
        "generate-changelog": "^1.7.1",
        "mocha": "^4.1.0",
        "nyc": "^11.8.0",
        "onchange": "^4.0.0",
        "rimraf": "^2.6.2",
        "rollup": "^0.62.0",
        "rollup-plugin-typescript2": "^0.15.1",
        "ts-node": "^4.1.0",
        "tsconfig-paths": "^3.4.2",
        "tslint": "^5.10.0",
        "tslint-config-standard": "^7.0.0",
        "typescript": "^2.8.3",
        "window": "^4.2.5"
    }
}
